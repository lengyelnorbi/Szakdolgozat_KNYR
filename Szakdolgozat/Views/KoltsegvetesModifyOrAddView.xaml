<Window x:Class="Szakdolgozat.Views.KoltsegvetesModifyOrAddView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Szakdolgozat.Views"
        xmlns:dContext="clr-namespace:Szakdolgozat.ViewModels"
        xmlns:specials="clr-namespace:Szakdolgozat.Specials"
        xmlns:models="clr-namespace:Szakdolgozat.Models"
        xmlns:customcontrols="clr-namespace:Szakdolgozat.CustomControls"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        mc:Ignorable="d"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        WindowStartupLocation="CenterScreen"
        Title="KoltsegvetesModifyOrAddView" Height="650" Width="450">
    <Window.DataContext>
        <dContext:KoltsegvetesModifyOrAddViewModel />
    </Window.DataContext>
    <Border Background="#1F3B73">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"></RowDefinition>
                <RowDefinition Height="100"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <StackPanel x:Name="pnlControlBar"
           Grid.Row="0"
           Orientation="Horizontal"
           FlowDirection="RightToLeft"
           Background="Transparent"
           Margin="0,0,5,0">
                    <Button x:Name="btnClose"
           Style="{StaticResource controlButton}"
           Tag="#FB539B"
           Click="btnClose_Click"
           Grid.Column="3">
                        <fa:IconImage Icon="Xmark" Style="{StaticResource controlButtonIcon}"/>
                    </Button>
                    <Button x:Name="btnMaximize" Visibility="Hidden"
           Style="{StaticResource controlButton}"
           Tag="#FFC047"
           Grid.Column="2">
                        <fa:IconImage Icon="Square" Style="{StaticResource controlButtonIcon}"/>
                    </Button>
                    <Button x:Name="btnMinimize"
           Style="{StaticResource controlButton}"
           Tag="#78A3FC"
           Click="btnMinimize_Click"
           Grid.Column="1">
                        <fa:IconImage Icon="WindowMinimize" Width="12" Style="{StaticResource controlButtonIcon}"/>
                    </Button>
                </StackPanel>
            </Grid>
            <StackPanel Grid.Row="1" Margin="20">
                <TextBlock Foreground="White" FontSize="34" HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding Title}"/>
            </StackPanel>
            <Grid Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="{Binding IsEditPanelVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                <Border Width="300" Height="500" BorderThickness="1">
                    <StackPanel Margin="25,0,25,20">
                        <TextBlock Text="Összeg" FontSize="14" Margin="5,15,0,0" Foreground="White"/>
                        <TextBox FontSize="16" x:Name="osszegTB" Text="{Binding Amount, UpdateSourceTrigger=PropertyChanged}" Background="LightGray" HorizontalContentAlignment="Center" Margin="0,0,0,5" Height="28"/>

                        <TextBlock Text="Pénznem" FontSize="14" Margin="5,15,0,0" Foreground="White"/>
                        <ComboBox FontSize="16" x:Name="penznemTB" ItemsSource="{Binding Source={specials:EnumBindingSource {x:Type models:Penznem}}}" SelectedItem="{Binding Currency, UpdateSourceTrigger=PropertyChanged}" Background="LightGray" HorizontalContentAlignment="Center" Margin="0,0,0,5" Height="28"/>

                        <TextBlock Text="BeKiKód" FontSize="14" Margin="5,15,0,0" Foreground="White"/>
                        <ComboBox FontSize="16" x:Name="beKiKodTB" ItemsSource="{Binding Source={specials:EnumBindingSource {x:Type models:BeKiKod}}}" SelectedItem="{Binding IncExpID, UpdateSourceTrigger=PropertyChanged}" Background="LightGray" HorizontalContentAlignment="Center" Margin="0,0,0,5" Height="28"/>

                        <TextBlock Text="Teljesítési Dátum" FontSize="14" Margin="5,15,0,0" Foreground="White"/>
                        <DatePicker FontSize="16" x:Name="teljesitesiDatumTB" SelectedDate="{Binding CompletionDate, UpdateSourceTrigger=PropertyChanged}" Background="LightGray" HorizontalContentAlignment="Center" Margin="0,0,0,5" Height="28" />

                        <TextBlock Text="Kötelezettség/Követelés ID" FontSize="14" Margin="5,15,0,0" Foreground="White"/>
                        <TextBox FontSize="16" x:Name="kotelKovetIDTB" Text="{Binding OblClaimID, UpdateSourceTrigger=PropertyChanged}" Background="LightGray" HorizontalContentAlignment="Center" Margin="0,0,0,5" Height="28"/>

                        <TextBlock Text="Partner ID" FontSize="14" Margin="5,15,0,0" Foreground="White"/>
                        <TextBox FontSize="16" x:Name="partnerIDTB" Text="{Binding PartnerID, UpdateSourceTrigger=PropertyChanged}" Background="LightGray" HorizontalContentAlignment="Center" Margin="0,0,0,5" Height="28"/>

                        <Grid Width="300" HorizontalAlignment="Center" VerticalAlignment="Center" Height="80">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="25"/>
                                <ColumnDefinition Width="125"/>
                                <ColumnDefinition Width="125"/>
                                <ColumnDefinition Width="25"/>
                            </Grid.ColumnDefinitions>
                            <Button Grid.Column="1" Margin="0,0,5,0" Content="MENTÉS" Command="{Binding SaveCommand}" Foreground="White" BorderThickness="0"
                    FontSize="14"
                    FontFamily="Montserrat"
                    Cursor="Hand"      >
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="#462AD8"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#28AEED"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border  Height="40"
Background="{TemplateBinding Background}">
                                            <ContentPresenter VerticalAlignment="Center"
                HorizontalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                            <Button Grid.Column="2" Margin="5,0,0,0" Content="Mégse" Foreground="White" Command="{Binding CancelEditCommand}" BorderThickness="0"
                    FontSize="14"
                    FontFamily="Montserrat"
                    Cursor="Hand"      >
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="#462AD8"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#28AEED"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border  Height="40"
Background="{TemplateBinding Background}">
                                            <ContentPresenter VerticalAlignment="Center"
                HorizontalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </Grid>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>
