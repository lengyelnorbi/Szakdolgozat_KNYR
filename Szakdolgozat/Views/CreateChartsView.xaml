                <Grid Grid.Row="1">
                    <TabControl x:Name="chartsTabControl" ItemsSource="{Binding Tabs,Mode=TwoWay, NotifyOnTargetUpdated=True, UpdateSourceTrigger=PropertyChanged, NotifyOnSourceUpdated=True}">
                    </TabControl>
                </Grid>
            </Grid>
            <StackPanel Grid.Column="1">
                <Button x:Name="goBackButton" Content="Vissza" Click="goBackButton_Click" Command="{Binding ShowSelectDataForNewChartViewCommand}" Visibility="Hidden"></Button>
                <Button x:Name="nextButton" Click="Button_Click" Command="{Binding ShowAddOptionToNewChartViewCommand}" Content="Tovább" Visibility="Hidden"></Button>
                <ComboBox x:Name="optionsCB" ItemsSource="{Binding CheckBoxes}" Grid.Column="1" Width="150" Background="White" SelectedIndex="0" SelectionChanged="ComboBox_SelectionChanged">
                </ComboBox>
                <Button x:Name="cellSelectionTrue" Click="ChangeCellColor_Click" Content="Kiválaszt"></Button>
                <Button x:Name="cellSelectionFalse" Click="ChangeCellColor_Click" Content="Töröl"></Button>
                <Button Click="Button_Click_1" Content="TESZT"></Button>
            </StackPanel>
        </Grid>
    </Border>
